<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="6dp"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/usuarios_cardview_layout_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="14dp"
                android:textAppearance="@android:style/TextAppearance.Holo"
                android:id="@+id/usuarios_cardview_Nombre_id"
                android:text="texto ejemplo" />

            <ImageView
                android:id="@+id/usuarios_cardview_img_estado_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="100dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_estado_usuario_conexion_desconectado" />

            <TextView
                android:id="@+id/usuarios_cardview_estado_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="texto ejemplo"
                android:textColor="@color/desconectado"
                android:layout_alignTop="@+id/usuarios_cardview_img_estado_id"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
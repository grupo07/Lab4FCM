<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/destino_background">


        <TextView
            android:id="@+id/chat_destino_usuario_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="12sp"
            tools:text="Pedro" />

        <TextView
            android:id="@+id/chat_destino_mensaje_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chat_destino_usuario_id"
            tools:text="Hi. How are you?"
            android:padding="4dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/chat_destino_fecha_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2016/10/31 15:34"
            android:padding="4dp"
            android:layout_below="@id/chat_destino_mensaje_id"
            android:textSize="12sp"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</RelativeLayout>